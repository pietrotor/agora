{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "src",
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "target": "es6",
    "lib": ["ES6"],
    "paths": {
      "@/graphql/*": ["./graphql/*"],
      "@/interfaces/*": ["./interfaces/*"],
      "@/entities/*": ["./entities/*"],
      "@/lib/*": ["./lib/*"],
      "@/models/*": ["./models/*"],
      "@/repositories/*": ["./repositories/*"],
      "@/services/*": ["./services/*"],
      "@/validators/*": ["./validators/*"]
    },
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
